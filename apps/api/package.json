{
  "name": "@saas/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run env:load tsx watch src/http/server.ts",
    "env:load": "dotenv -e ../../.env --",
    "db:reset": "npm run env:load prisma migrate reset",
    "db:migrate": "npm run env:load prisma migrate dev",
    "db:generate": "npm run env:load prisma generate",
    "db:studio": "npm run env:load -- prisma studio --config ./prisma.config.ts --browser none --port 5555",
    "db:seed": "npm run env:load prisma db seed"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.6.1",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@saas/auth": "*",
    "@saas/env": "*",
    "@scalar/fastify-api-reference": "^1.40.0",
    "bcryptjs": "^3.0.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@saas/eslint-config": "*",
    "@saas/prettier": "*",
    "@saas/typescript-config": "*",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.0.0",
    "tsx": "^4.20.6"
  },
  "prettier": "@saas/prettier",
  "eslintConfig": {
    "extends": [
      "@saas/eslint-config/node"
    ]
  }
}
